#include <iostream>
using namespace std;

int main() {
    int t;
    cin >> t;
    while(t--)
    {
        int n;
        cin >> n;
        int a[n];
        int i;
       
        int o=0;
        int e=0;
        
        int x;
        
        for(i=0;i<n;i++)
        {
            cin >> a[i];
            
        }
        for(i=0;i<n;i++)
        {
            if(a[i]%2==1)
            {
               o++;
            }
        }
        for(i=0;i<n;i++)
        {
             if(a[i]%2==0)
            {
                e++;
            }
        }
        {
             if ((e>0) &&(o==0))
            {
                cout << 0 << endl;
            }
            else if ((e==0) &&(o>0))
            {
                cout << 0 << endl;
            }
            else
            {
                cout << e << endl;
            }
        }
            
    }
    
	return 0;
}
